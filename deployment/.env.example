# LinkedIn Gateway Deployment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_USER=linkedin_gateway_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123
DB_NAME=LinkedinGateway
DB_PORT=5437

# =============================================================================
# API CONFIGURATION
# =============================================================================
BACKEND_PORT=7778
PORT=7778
API_HOST=0.0.0.0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate secure keys: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY
JWT_SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY

# =============================================================================
# LINKEDIN OAUTH CREDENTIALS
# =============================================================================
# Get these from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# =============================================================================
# PUBLIC URL CONFIGURATION (REQUIRED FOR OAUTH)
# =============================================================================
# Your public HTTPS URL (tunnel, reverse proxy, or production domain)
# Examples:
#   - Cloudflare Tunnel: https://your-tunnel.trycloudflare.com
#   - Ngrok: https://abc123.ngrok.io
#   - Production: https://lg.ainnovate.tech


# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins, or * for all
CORS_ORIGINS=*

# =============================================================================
# EDITION CONFIGURATION (Open Core)
# =============================================================================
LG_BACKEND_EDITION=core
LG_CHANNEL=default

# =============================================================================
# RATE LIMITING
# =============================================================================
DEFAULT_RATE_LIMIT=100
DEFAULT_RATE_WINDOW=3600

